<Window x:Class="QuanLyFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="300" Loaded="Window_Loaded">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <ComboBox Name="cmbDisk" Width="248" SelectionChanged="cmbDisk_SelectionChanged"></ComboBox>
            <Image Source="Images/Up.png" Height="32"></Image>
        </StackPanel> 
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <ListBox Name="lstListFile" MouseDoubleClick="lstListFile_MouseDoubleClick" />
            </StackPanel>
        </ScrollViewer>
    </StackPanel>
</Window>
